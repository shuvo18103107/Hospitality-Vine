extends base
block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg#logincolor Log into your account
      form.form
        .form__group
          label.form__label#formColor(for='email') Email address
          input#email.form__input(
            type='email',
            placeholder='you@example.com',
            required
          )
        .form__group.ma-bt-md
          label.form__label#formColor(for='password') Password
          input#password.form__input(
            type='password',
            placeholder='••••••••',
            required,
            minlength='8'
          )
        .form__group.forgotPassform
          button.btn.btn-text Login
          h2.forgotPass
            a(href='/forgotPass') Forgot Password?